SELECT DISTINCT
    A."REFERENCE",
    A.PLANT,
    A.MOVEMENT_TYPE,
	A.FROM_LOCATION,
	A.SLOC,
	B.CUSTOMER,
    A.MUTASI_OUT_QTY,
    A.MUTASI_OUT_AMOUNT,
    B.DO_QTY
FROM
(SELECT 
    "REFERENCE",
    PLANT || '-' || PLANT_NAME AS PLANT,
    MOVEMENT_TYPE || '-' || MOVEMENT_TYPE_DESCRIPTION AS MOVEMENT_TYPE,    
    FROM_LOCATION,
    STORAGE_LOCATION || '-' || STORAGE_LOCATION_NAME AS SLOC,
    SUM(MUTASI_OUT_QUANTITY) AS MUTASI_OUT_QTY,
    SUM(MUTASI_OUT_AMOUNT) AS MUTASI_OUT_AMOUNT
 FROM PROD_DB.DSTR_BI_COMMUNITY.F_SCM_MUTASI_MATERIAL
 WHERE MOVEMENT_TYPE = '601'
      AND "REFERENCE" = '3207452099'
 GROUP BY ALL) A,
(SELECT 
    "REFERENCE",
    SD.CUSTOMER,
    SUM(SD.DELIVERY_QUANTITY_IN_BASE_UOM) AS DO_QTY
 FROM PROD_DB.DSTR_BI_COMMUNITY.F_SCM_MUTASI_MATERIAL SCM
 LEFT JOIN
 	(SELECT DISTINCT SOURCE_SYSTEM, CUSTOMER, DELIVERY_NUMBER, DELIVERY_QUANTITY_IN_BASE_UOM FROM PROD_DB.DSTR_BI_COMMUNITY.F_SALES_DELIVERY ) AS SD  
	ON SCM.REFERENCE = SD.DELIVERY_NUMBER
	AND SCM.SOURCE_SYSTEM = SD.SOURCE_SYSTEM
 WHERE"REFERENCE" = '3207452099'
 GROUP BY ALL) B;
